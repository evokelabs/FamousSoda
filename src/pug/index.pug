                    //i.fa.fa-search(aria-hidden='true')
                div#renderedLocations
                div#templateLocation.hidden
                  div.row.no-gutters
                    h4.golden-awesome.col-1
                      img(src='assets/images/cart-star.png')
                    h4.golden-text.col
                  span.address 
              #map.col.mt-4
    include ../pug-includes/footer.pug
